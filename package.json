{
  "name": "graphql-basics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist",
    "build": "npm run build:mysql-client",
    "heroku-postbuild": "babel src --out-dir dist --copy-files && NPM_CONFIG_PRODUCTION=false && npm install --prefix client && npm run build --prefix client",
    "server": "env-cmd -f ./config/dev.env nodemon src --ext js,graphql --exec babel-node --ignore client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand --notify",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env",
    "migrate": "env-cmd -f ./config/dev.env prisma migrate dev --schema=./prisma/schema.postgresql.prisma",
    "build:mysql-client": "prisma generate --schema=./prisma/schema.postgresql.prisma"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./tests/jest/globalSetup.js",
    "globalTeardown": "./tests/jest/globalTeardown.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "@prisma/client": "^3.15.2",
    "bcryptjs": "^2.4.3",
    "caniuse-lite": "^1.0.30001509",
    "core-js": "^3.6.5",
    "cross-fetch": "^3.0.5",
    "express": "^4.17.1",
    "graphql": "^14.0.2",
    "graphql-cli": "^3.0.14",
    "graphql-yoga": "^1.18.3",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.15.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "apollo-boost": "^0.1.14",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "apollo-utilities": "^1.3.4",
    "concurrently": "^5.2.0",
    "env-cmd": "^10.1.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "regenerator-runtime": "^0.13.5",
    "subscriptions-transport-ws": "^0.9.16"
  }
}
